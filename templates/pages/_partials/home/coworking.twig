{# ========================================================================== #}
{# Variables #}
{# ========================================================================== #}
{% set title = entry.commonSamenwerkingTitle ?? null %}
{% set description = entry.commonSamenwerkingDescription ?? null %}

{# ========================================================================== #}
{# Coworking #}
{# ========================================================================== #}
<section class="l-section">
	<div class="l-container">
		<header class="l-section__header">
			<h2 class="l-section__title">{{ title }}</h2>
		</header>
		<div class="l-section__content l-section__content--split">
			<div class="l-section__item s-wysiwyg">
				{{ description }}
			</div>
			<div class="l-section__item">
				{% include "/components/partners.twig" with {
					items: [
						{
							name: "Thibri plants",
							color: "lime"
						},
						{
							name: "Dirk Bogaert",
							color: "dark green"
						}
					]
				} only %}
			</div>
		</div>
	</div>
</section>
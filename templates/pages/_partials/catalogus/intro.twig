{# Create a category query with the 'group' parameter #}
{% set plantensoort = craft.categories().group('plantensoort').all() %}

{# Display the navigation #}
{% set plantensoort %}
	<ul>
		{% nav category in plantensoort %}
		<li>
			<a href="#{{ category.url }}">{{ category.title }}</a>
		</li>
		{% endnav %}
	</ul>
{% endset %}

{% include "/components/intro.twig" with {
	classes: "",
	contentTitle: entry.commonTitle,
	contentText: "<p>"~ entry.commonIntroduction ~ "</p>" ~ plantensoort
} only %}

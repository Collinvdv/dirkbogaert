{% extends "_base/layout" %}

{# ========================================================================== #}
{# Content #}
{# ========================================================================== #}
{% block content %}
	{% include "/pages/_partials/catalogus/intro.twig" %}

	{% set plantensoorten = craft.categories().group('plantensoort') %}

	{% for plantensoort in plantensoorten.all() %}
		{% if loop.index is even %}
			{% set plantClass = "" %}
		{%  else %}
			{% set plantClass = "l-section--grey" %}
		{% endif %}

		{% include "/pages/_partials/catalogus/section.twig" with {
			id: plantensoort.slug,
			classes: plantClass,
			contentTitle: plantensoort.title,
			contentText: plantensoort.commonIntroduction,
			plantensoort: plantensoort
		}  only %}
	{% endfor %}

{% endblock %}
